# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=caselog_db
MYSQL_USER=case_user
MYSQL_PASSWORD=your_secure_db_password_here

# ============================================
# APPLICATION SECURITY
# ============================================
# Generate strong random keys for production!
SECRET_KEY=generate-a-strong-secret-key-here
JWT_SECRET=generate-a-strong-jwt-secret-here

# ============================================
# WEB SERVER
# ============================================
WEB_PORT=8082

# ============================================
# SMTP CONFIGURATION (Optional - for OTP emails)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ============================================
# BACKUP CONFIGURATION (Optional)
# ============================================
BACKUP_DIR=/tmp/backups
